<body>
    <script> 
    
    //DATOS ;)//
         personas = prompt("Ingrese el número de personas");

         //Codigo

        if (personas < 200) {
            precioFinal = personas * 95;
            alert("PRECIO FINAL: $" + precioFinal)
        } else if (personas > 200 && personas <= 300) {
            precioFinal = personas * 85;
            alert("PRECIO FINAL: $" + precioFinal)
        } else if (personas > 300) {
            precioFinal = personas * 75;
            alert("PRECIO FINAL: $" + precioFinal)
        } else {
            alert("Ingrese un número válido de personas");
        }

    </script>
</body>
